---
import { Picture } from 'astro:assets'
const { title, slug, image, imageAlt } = Astro.props
---

<a class='card' href={slug}>
	<p class='font-subheading'>{title}</p>
	<Picture
		src={image}
		alt={imageAlt ?? ''}
		formats={['avif', 'webp', 'jpg']}
		widths={[200]}
	/>
</a>

<style lang='scss'>
	.card,
	.card:visited {
		position: relative;
		display: inline-flex;
		flex-direction: column;
		justify-content: end;
		width: 200px;
		aspect-ratio: 3 / 2;
		background-color: var(--neutral-lighter);
		border-radius: 1rem;
		text-decoration: none;
		padding: 0.5rem;
		overflow: hidden;

		p {
			border-radius: 0.5rem;
			background-color: var(--white);
			padding: 0.25rem 0.5rem;
			--background-color: var(--white);
			--text-color: var(--theme-primary);

			&:hover,
			&:focus {
				--background-color: var(--theme-primary);
				--text-color: var(--white);
				color: var(--text-color);
			}
		}

		img {
			position: absolute;
			inset: 0;
			width: 100%;
			height: 100%;
			object-fit: cover;
		}
	}
</style>
